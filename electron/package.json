{
    "name": "mzcoin",
    "productName": "Mzcoin",
    "author": "mzcoin",
    "main": "src/electron-main.js",
    "version": "0.12.0",
    "description": "mzcoin wallet",
    "build": {
        "appId": "org.shanghaikuaibei.mzcoin",
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "category": "public.app-category.productivity",
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./Resources/app"
            }]
        },
        "win": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        },
        "linux": {
            "extraFiles": [{
                "from": ".gox_output/${os}_${arch}",
                "to": "./resources/app"
            }]
        },
        "extraResources": [{
            "from": "../src/gui/static/dist/",
            "to": "./app/dist/",
            "filter":[
                "**/*",
                "!current-skycoin.json"
               ]
        },
            {
                "from": "./skycoin",
                "to": "./app/dist/"
            }
        ],
        "directories": {
            "output": "release"
        }
    },
    "scripts": {
        "dist-win": "build -w --x64 --ia32",
        "dist-linux": "build -l --x64",
        "dist-mac": "build -m --x64",
        "pack-mac": "build --dir -m"
    },
    "devDependencies": {
        "electron": "1.4.13"
    }
}